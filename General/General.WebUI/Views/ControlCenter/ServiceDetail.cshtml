@model CompanyServiceModel
@{
    ViewData["Title"] = "ServiceDetail";
    Layout = "~/Views/Shared/ControlCenter/_ControlCenterLayout.cshtml";
}

<section id="content">
    <section class="boxs">
        <div class="boxs-header">
            <h3 class="custom-font hb-blush">
                <strong>Bu sayfadan servisinizi </strong> düzenleyebilirsiniz.
            </h3>

        </div>
        <div class="boxs-body">
            <form class="form-horizontal" asp-action="ServiceDetail" asp-controller="ControlCenter" method="post" enctype="multipart/form-data">
                <input type="hidden" name="Id" value="@Model.Id"/>
                <div class="form-group">
                    <label for="input01" class="col-sm-2 control-label">Servisin Adı:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="name" id="input01" value="@Model.name">
                    </div>
                </div>
                <hr class="line-dashed full-witdh-line" />
                <div class="form-group">
                    <label for="input02" class="col-sm-2 control-label">Servisin Açıklaması Kısaca:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="input02" name="shortexplanation" value="@Model.shortexplanation">
                        <span class="help-block mb-0">(Maksimim 100 karakterle servisinizi özetleyiniz.)</span>
                    </div>
                </div>
                <hr class="line-dashed full-witdh-line" />
                <div class="form-group">
                    <label for="input03" class="col-sm-2 control-label">Servisin Açıklaması Uzun:</label>
                    <div class="col-sm-10">
                        <textarea type="text" class="form-control" id="summernote" name="longexplanation">@Model.longexplanation</textarea>
                        <span class="help-block mb-0">(İstediğiniz uzunlukta bir açıklama yazabilirsiniz.)</span>
                        <span asp-validation-for="longexplanation" class="help-block mb-0"></span>
                    </div>
                </div>
                <hr class="line-dashed full-witdh-line" />
                <div class="form-group">
                    <label class="col-sm-2 control-label">Servisin İconu</label>
                    <div class="col-sm-10 alfa">
                        <select class="chosen-select " style="width: 240px;" name="se">
                            <option value="fa fa-dollar">Dolar</option>
                            <option value="fa fa-lightbulb-o">Ampul</option>
                            <option value="service-icon icon-pentagon">Şeffaf Kutu</option>
                            <option value="fa fa-bar-chart">Bar Grafiği</option>
                            <option value="fa fa-comments">Konuşma Baloncuğu</option>
                            <option value="fa fa-server">Server</option>
                            <option value="fa fa-camera">Camera</option>
                            <option value="fa fa-database">Database</option>
                            <option value="service-icon icon-pentagon">Kalkan</option>
                            <option value="fa fa-table">Tablo</option>
                            <option value="fa fa-pagelines">Yaprak</option>
                            <option value="fa fa-diamond">Elmas</option>
                            <option value="fa fa-users">Çoklu İnsan</option>
                            <option value="fa fa-desktop">Masaüstü Bilgisayar</option>

                        </select>
                    </div>
                    <input type="hidden" class="form-control" id="input04" name="icon" value="@Model.icon">
                </div>

                <hr class="line-dashed full-witdh-line" />
                <div class="form-group">
                    <label class="col-sm-2 control-label"> Servisin Fotoğrafı</label>
                    <div class="col-sm-10">
                        <label>Ürün Görseli</label>
                        <input type="hidden" name="image" value="@Model.image" />
                        <img src="~/images/services/@Model.image" alt="Servisin Fotoğrafı" style="width:80px; height:120px;" />
                        <input type="file" class="filestyle" data-buttonText="Dosya bul." data-iconName="fa fa-inbox" name="file">
                        <span asp-validation-for="image" class="help-block mb-0"></span>
                    </div>
                </div>
                <hr class="line-dashed full-witdh-line" />
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <button type="reset" class="btn btn-raised btn-danger">İptal</button>
                        <button type="submit" class="btn btn-raised btn-default">Kaydet ve Değiştir</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
</section>
<script src="~/js/jquery.js"></script>
<script>
    $(document).ready(function () {
        $(".alfa select").on("change", function () {
            var selVal = $(this).val();
            $('#input04').val(selVal);
        });

    });
</script>