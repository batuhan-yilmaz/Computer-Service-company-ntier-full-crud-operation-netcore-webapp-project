@model EditUser
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/ControlCenter/_ControlCenterLayout.cshtml";
}

<section id="content">
    <section class="boxs">
        <div class="boxs-header">
            <h3 class="custom-font hb-blush">
                <strong>Bu sayfadan servisinizi </strong> düzenleyebilirsiniz.
            </h3>

        </div>
        <div class="boxs-body">
            <form class="form-horizontal" asp-action="EditUser" asp-controller="ControlCenter" method="post" enctype="multipart/form-data">
                <input type="hidden" name="userId" value="@Model.Id" />
                <div class="form-group">
                    <label for="input01" class="col-sm-2 control-label">Email Adresi:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Email" id="input01" value="@Model.Email">
                    </div>
                </div>
                <hr class="line-dashed full-witdh-line" />
                <div class="form-group">
                    <label for="input01" class="col-sm-2 control-label">Kullanıcı Adı:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="UserName" id="input01" value="@Model.UserName">
                    </div>
                </div>
                <hr class="line-dashed full-witdh-line" />
                <div class="form-group">
                    <label class="col-sm-2 control-label">Kullanıcı Rolü</label>
                    <div class="col-sm-4">
                        @if (Model.Roles.Any())
                        {
                            foreach (var role in Model.Roles)
                            {
                                <input type="text" class="form-control" name="UserName" id="input01" value="@role" readonly>
                            }
                        }
                    </div>
                    <div class="col-sm-4">
                        <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id"
                           class="btn btn-primary">
                            Rolü Düzenle
                        </a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                        <button type="reset" class="btn btn-raised btn-danger">İptal</button>
                        <button type="submit" class="btn btn-raised btn-default">Kaydet ve Değiştir</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
</section>
