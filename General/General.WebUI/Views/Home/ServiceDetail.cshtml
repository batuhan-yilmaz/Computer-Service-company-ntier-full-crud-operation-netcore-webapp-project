@model CompanyServiceModel
@{
    ViewData["Title"] = "ServiceDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="banner-area">
    <img src="../../images/banner/banner2.jpg" alt="" />
    <div class="parallax-overlay"></div>
    <!-- Subpage title start -->
    <div class="banner-title-content">
        <div class="text-center">
            <h2>@Model.name</h2>
            <ul class="breadcrumb">
                <li>
                    <a asp-controller="Home" asp-action="Services" class="dropdown-toggle navbar-link @(ViewBag.menuactive=="Services"?"active":"")">Hizmetlerimiz <i class="fa fa-angle-down"></i></a>
                </li>
                <li><a href="#"> @Model.name</a></li>
            </ul>
        </div>
    </div><!-- Subpage title end -->
</div><!-- Banner area end -->
<!-- Main container start -->
<section class="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h3>Hemen bizimle iletişime geçin!</h3>
                <a href="index.html#contact" class="pull-right btn btn-primary white">İletişim</a>
            </div>
        </div>
    </div>
</section>

<!-- Main container start -->

<section id="main-container">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="post-content">
                    <div class="post-image-wrapper">
                        <img src="~/images/services/@Model.image" class="img-responsive" alt="" />
                    </div>
                    @Html.Raw(Model.longexplanation)

                </div><!--/ post content end -->

            </div><!--/ Content col end -->


        </div><!--/ row end -->
    </div><!--/ container end -->
</section><!--/ Main container end -->
